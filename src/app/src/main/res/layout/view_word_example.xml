<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtSekaniExample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space.small"
        android:layout_marginLeft="@dimen/space.small"
        android:layout_marginTop="@dimen/space.small"
        android:text="Sekani Word"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/blue_700"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btnAudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space.small"
        android:layout_marginLeft="@dimen/space.small"
        android:layout_marginTop="@dimen/space.small"

        app:layout_constraintStart_toEndOf="@+id/txtSekaniExample"
        app:layout_constraintTop_toTopOf="parent"
        android:tint="@color/grey_60"
        app:srcCompat="@drawable/ic_volume_up_black_24dp" />


    <TextView
        android:id="@+id/txtEnglishExample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="txtEnglishExample"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/gray"
        app:layout_constraintStart_toStartOf="@+id/txtSekaniExample"
        app:layout_constraintTop_toBottomOf="@+id/txtSekaniExample" />
</android.support.constraint.ConstraintLayout>